@using CvSitem.Models.Siniflar
@model List<Egitim>
@{
    ViewBag.Title = "Egitim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Eğitimler</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Okul</th>
        <th>Bölüm</th>
        <th>Alan</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th>@i.ID</th>
                <td>@i.Baslik</td>
                <td>@i.AltBaslik</td>
                <td>@i.Aciklama</td>
                <td>@i.GNO</td>
                <td>@i.Tarih</td>
                <td><a href="/Egitim/EgitimSil/@i.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Egitim/EgitimGetir/@i.ID" class="btn btn-warning">Güncelle</a></td>
            </tr>

        }
    </tbody>
</table>
<a href="/Egitim/EgitimEkle" class="btn btn-success">Eğitim Ekle</a>
