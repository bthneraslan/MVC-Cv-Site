@using CvSitem.Models.Siniflar
@model List<Sertifikalar>
@{
    ViewBag.Title = "Sertifikalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Sertifikalar</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Sertifika</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach(var i in Model)
        {
            <tr>
                <th>@i.ID</th>
                <td>@i.Sertifika</td>
                <td><a href="/Sertifika/SertifikaSil/@i.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Sertifika/SertifikaGetir/@i.ID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Sertifika/SertifikaEkle" class="btn btn-success">Sertifika Ekle</a>
