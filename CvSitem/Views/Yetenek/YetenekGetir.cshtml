@model CvSitem.Models.Siniflar.Yetenekler
@{
    ViewBag.Title = "YetenekGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yetenek Güncelleme</h2>
<br />

@using (Html.BeginForm("YetenekGuncelle", "Yetenek", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.ID)
        <label>Yetenek</label>
        @Html.TextBoxFor(x=>x.Yetenek,new {@class="form-control" })
        <br />
        <div>
            <button class="btn btn-primary">Güncelle</button>
        </div>
    </div>
}

